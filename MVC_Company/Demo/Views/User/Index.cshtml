@model IEnumerable<UserViewModel>

@{
    TempData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>All Users</h1>
<br />
<br />
<form asp-action="Index">
    <div class="row">
        <div class="col-8">
            <input type="text" name="SearchInput" id="SearchInput" class="form-control" placeholder="Search.." />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>



<br />
<br />

@if (Model.Count() == 0)
{

    <p class="alert alert-warning"> There is No users</p>
}
else
{
    <table class="table d-sm-table-cell table-hover w-100">
        <thead>
            <tr>
                @* <th> @Html.DisplayNameFor(d => d.Image) </th> *@
                <th> @Html.DisplayNameFor(d => d.Id) </th>
                <th> @Html.DisplayNameFor(d => d.Email) </th>
                <th> @Html.DisplayNameFor(d => d.UserName) </th>
                <th> @Html.DisplayNameFor(d => d.Roles) </th>
                <th> @Html.DisplayNameFor(d => d.FirstName) @Html.DisplayNameFor(d => d.LastName) </th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <body>
            @foreach (var item in Model.Reverse())
            {
                <tr>
                    @* <td>
                        <img src="~/images/@item.ImageUrl" width="75" height="50" class="rounded-circle" />
                    </td> *@
                    <th> @item.Id</th>
                    <th> @item.Email</th>
                    <th> @item.UserName</th>
                    <th> @item.Roles</th>
                    <th> @string.Join(item.FirstName, " ", item.LastName)</th>

                    <partial name="_ButtonPartialView" model="@item.Id.ToString()" />
                </tr>

            }
        </body>
    </table>

}